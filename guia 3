    <div class="container">
        <img src="logo.png" alt="Logo TMT" class="logo-img">
        <p class="powered-by">NVI & TLA</p>

        <div class="search-box">
            <input type="text" id="searchInput" placeholder="Escribe c√≥mo te sientes..." autocomplete="off">
            <button class="search-btn" onclick="triggerSearch()">Buscar en la Biblia</button>
        </div>

        <div class="loader" id="loader"></div>
        <p class="error-msg" id="errorMsg"></p>

        <div id="result-area">
            <p class="verse-text" id="verseText"></p>
            <span class="verse-ref" id="verseRef"></span>
        </div>

        <div class="tags">
            <span class="tag" onclick="quickSearch('Tengo ansiedad por el futuro')">Ansiedad Futuro</span>
            <span class="tag" onclick="quickSearch('Me siento solo')">Soledad</span>
            <span class="tag" onclick="quickSearch('Tengo rabia')">Enojo</span>
            <span class="tag" onclick="quickSearch('Me siento tentado')">Tentaci√≥n</span>
            <span class="tag" onclick="quickSearch('Estoy confundido')">Confusi√≥n</span>
        </div>
    </div>

    <script>
        // =========================================================
        // üî¥üî¥üî¥ PEGA TU √öLTIMA API KEY AQU√ç ABAJO üî¥üî¥üî¥
        const API_KEY ='AIzaSyBKICbrZSZ6RQduaGEhymiGz8iZwAg_ro8'; 
        // =========================================================

        const input = document.getElementById('searchInput');
        const resultArea = document.getElementById('result-area');
        const loader = document.getElementById('loader');
        const errorMsg = document.getElementById('errorMsg');
        const vText = document.getElementById('verseText');
        const vRef = document.getElementById('verseRef');

        // Lista de todas las combinaciones a probar
        const MODELS_TO_TRY = [
            // Combinaciones v1beta (M√°s permisivas)
            { version: 'v1beta', model: 'gemini-1.5-flash' },
            { version: 'v1beta', model: 'gemini-pro' },
            { version: 'v1beta', model: 'gemini-1.5-pro' },
            // Combinaciones v1 (Estables)
            { version: 'v1', model: 'gemini-1.5-flash' },
            { version: 'v1', model: 'gemini-pro' },
            { version: 'v1', model: 'gemini-1.5-pro' },
        ];

        input.addEventListener("keypress", function(event) {
            if (event.key === "Enter") triggerSearch();
        });

        function quickSearch(text) {
            input.value = text;
            triggerSearch();
        }

        async function triggerSearch() {
            let userEmotion = input.value.trim();
            if (!userEmotion) return;

            // UI Reset
            resultArea.style.display = 'none';
            errorMsg.style.display = 'none';
            loader.style.display = 'block';

            const prompt = `Eres un asistente API JSON. Tu √∫nica tarea es devolver JSON.
            Usuario: "${userEmotion}"
            Tarea: Busca un vers√≠culo b√≠blico (NVI o TLA) para esta emoci√≥n.
            Respuesta OBLIGATORIA: Un objeto JSON puro con este formato exacto: {"verso": "texto...", "cita": "Libro X:Y"}.
            NO uses Markdown. NO uses comillas triples. NO escribas nada fuera del JSON.`;

            try {
                let successData = null;
                let finalModel = '';
                let googleErrorDetail = null;

                // --- SISTEMA DE AUTO-DETECCI√ìN DE MODELO (FUERZA BRUTA) ---
                for (const combination of MODELS_TO_TRY) {
                    try {
                        console.log(`Probando ${combination.model} en ${combination.version}...`);
                        
                        const response = await fetch(`https://generativelanguage.googleapis.com/${combination.version}/models/${combination.model}:generateContent?key=${API_KEY.trim()}`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ contents: [{ parts: [{ text: prompt }] }] })
                        });

                        const data = await response.json();

                        if (!data.error) {
                            successData = data;
                            finalModel = `${combination.model} (${combination.version})`;
                            break; // ¬°√âxito!
                        } else {
                            // Capturamos el primer error de Google que no sea "Not Found"
                            if (data.error.code !== 404 && !data.error.message.includes('not found')) {
                                googleErrorDetail = data.error.message;
                                throw new Error(data.error.message); // Salimos del loop con el error
                            }
                            console.warn(`Modelo ${combination.model} no encontrado en ${combination.version}.`);
                        }
                    } catch (e) {
                        // Captura cualquier error de red o de clave
                        googleErrorDetail = googleErrorDetail || e.message;
                        break; // Detenemos el loop
                    }
                }

                if (!successData) {
                    // Si no hubo √©xito y tenemos un error espec√≠fico de Google
                    if (googleErrorDetail) {
                        // Este es el mensaje cr√≠tico de diagn√≥stico
                        throw new Error(`‚ö†Ô∏è ERROR CR√çTICO DE GOOGLE: ${googleErrorDetail}`);
                    }
                    // Mensaje gen√©rico si no se pudo obtener detalle
                    throw new Error("No se pudo conectar con ning√∫n modelo de Google. Verifica tu API Key o conexi√≥n.");
                }

                // --- Procesamiento de Respuesta Exitosa ---
                let rawText = successData.candidates[0].content.parts[0].text;
                rawText = rawText.replace(/```json/g, '').replace(/```/g, '').trim();
                
                let verseData;
                try {
                    verseData = JSON.parse(rawText);
                } catch (e) {
                    // Si falla el formato, mostramos la respuesta de la IA sin formato
                    vText.textContent = rawText;
                    vRef.textContent = `Respuesta de la IA (${finalModel})`;
                    loader.style.display = 'none';
                    resultArea.style.display = 'block';
                    return; 
                }

                vText.textContent = `"${verseData.verso}"`;
                vRef.textContent = verseData.cita;
                
                loader.style.display = 'none';
                resultArea.style.display = 'block';

            } catch (error) {
                console.error(error);
                loader.style.display = 'none';
                errorMsg.style.display = 'block';
                errorMsg.innerHTML = error.message;
            }
        }
    </script>
</body>
