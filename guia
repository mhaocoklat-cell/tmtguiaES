<body onload="checkHosting()">
    <div class="container-pulso">
        <h1 class="uppercase">Navegador de Decisiones</h1>
        <p class="subtitle">¿Quién tiene el control? Usa el Fruto del Espíritu para guiar tu semana.</p>
        
        <textarea id="scenarioInput" class="gemini-input" placeholder="Escribe aquí tu desafío (Ej: Mis amigos quieren que mienta para salir. ¿Cómo actúo con Fe o Dominio Propio?)" required></textarea>
        
        <button class="gemini-button" onclick="getSpiritualGuidance()">
            <i class="fa-solid fa-compass"></i> RECIBIR GUÍA DEL ESPÍRITU
        </button>
        
        <div id="guidanceOutput" class="gemini-output">
            Esperando tu escenario... ¡Recuerda que Él te guiará con Su amor!
        </div>
    </div>

<script>
    const apiKey = ""; 

    function checkHosting() {
        if (window.location.protocol === 'file:') {
            document.getElementById('guidanceOutput').innerHTML = '<span style="color: #ff0055;">¡ATENCIÓN!</span> Este archivo debe estar **alojado en un servidor web** (subido a internet, no abierto desde tu computador) para que el código QR y la IA funcionen correctamente. Consulta la Guía de 3 Pasos.';
            document.getElementById('scenarioInput').disabled = true;
            document.querySelector('.gemini-button').disabled = true;
        }
    }

    async function getSpiritualGuidance() {
        const userScenario = document.getElementById('scenarioInput').value.trim();
        const outputElement = document.getElementById('guidanceOutput');
        
        if (!userScenario) {
            outputElement.innerHTML = 'Por favor, escribe un escenario o un desafío para recibir guía.';
            return;
        }

        outputElement.innerHTML = '<div class="loading"><i class="fa-solid fa-spinner fa-spin"></i> Buscando la guía en Su Palabra...</div>';
        
        const systemPrompt = `Actúa como un mentor cristiano juvenil (para un joven de 14 años), sabio y accesible. Analiza el escenario dado y responde de manera concisa (máximo 4 frases) y bíblica. Tu respuesta debe identificar cuál de los nueve Frutos del Espíritu (Amor, Gozo, Paz, Paciencia, Benignidad, Bondad, Fe, Mansedumbre, Dominio Propio) aplica mejor y cómo el joven puede actuar bajo la guía del Espíritu. Responde solo en español.`;
        const userQuery = `Mi desafío es: "${userScenario}". ¿Cómo me guiaría el Espíritu Santo en esta situación?`;

        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

        const payload = {
            contents: [{ parts: [{ text: userQuery }] }],
            systemInstruction: {
                parts: [{ text: systemPrompt }]
            },
        };

        let response;
        let retries = 0;
        const maxRetries = 5;
        let delay = 1000; 

        while (retries < maxRetries) {
            try {
                response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    break; 
                } else if (response.status === 429) {
                    retries++;
                    await new Promise(resolve => setTimeout(resolve, delay));
                    delay *= 2; 
                } else {
                    throw new Error(`Error HTTP: ${response.status}`);
                }
            } catch (error) {
                retries++;
                await new Promise(resolve => setTimeout(resolve, delay));
                delay *= 2; 
                if (retries === maxRetries) {
                    outputElement.innerHTML = `Error: No se pudo conectar con el Navegador de Decisiones. Intenta de nuevo.`;
                    return;
                }
            }
        }
        
        try {
            const result = await response.json();
            const text = result.candidates?.[0]?.content?.parts?.[0]?.text;

            if (text) {
                outputElement.innerHTML = text;
            } else {
                outputElement.innerHTML = 'Error al generar la guía. Intenta con un escenario diferente.';
            }
        } catch (error) {
            outputElement.innerHTML = 'Error al procesar la respuesta. Verifica tu conexión.';
        }
    }
</script>

</body>
